<%= link_to edit_task_path(@task), class: "btn btn-outline-secondary float-end" do %>
  <i class="fa-solid fa-pencil"></i> Edit this task
<% end %>

<h1><%= @task.title %></h1>
<p class="card card-body bg-light"><%= @task.details %></p>
<% if @task.completed %>
  <i class="fa-regular fa-square-check"></i> This task is completed
<% else %>
  <i class="fa-regular fa-square"></i> This task is not completed yet
<% end %>

<hr>
<%= link_to tasks_path do %>
  <i class="fa-solid fa-clock-rotate-left fa-shake"></i> Back to list
<% end %>
